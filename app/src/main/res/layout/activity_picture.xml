<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Picture">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/layout_for_picture"
        android:layout_above="@+id/btn_layout_pic"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/particular_image"
            android:background="@color/white"
            android:src="@drawable/logo"
            android:layout_margin="3dp"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_layout_pic"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:padding="2dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_border"
            android:id="@+id/back_btn_pic"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_save_alt_24"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:id="@+id/download_btn_pic"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_border"
            android:id="@+id/share_btn_pic"/>


    </LinearLayout>
    

</RelativeLayout>